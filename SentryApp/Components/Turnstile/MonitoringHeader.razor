@if (_showSettingsModal)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Monitoring Settings</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="CloseSettings"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label" for="connectionString">Database connection string</label>
                        <input class="form-control" id="connectionString" type="text" @bind="_connectionString"
                            placeholder="Server=...;Database=...;" />
                    </div>

                    <div class="form-check form-switch mt-3 mb-3">
                        <input class="form-check-input" id="liveMode" type="checkbox" role="switch" @bind="_isLiveMode" />
                        <label class="form-check-label" for="liveMode">Live mode</label>
                        <div class="form-text">Toggle off to switch to demo mode.</div>
                    </div>

                    <div class="mt-3 mb-3">
                        <label class="form-label" for="deviceSelect">Device to monitor</label>
                        <select class="form-select" id="deviceSelect" @bind="_selectedDeviceSerial">
                            @if (_devices.Count == 0)
                            {
                                <option disabled value="">No devices available</option>
                            }
                            else
                            {
                                <option value="1">All Devices</option>
                                @foreach (var device in _devices)
                                {
                                    <option value="@device.SerialNumber">@device.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="mt-3 mb-3">
                        <label class="form-label" for="photosPath">Photos path</label>
                        <div class="input-group">
                            <input class="form-control" id="photosPath" type="text" @bind="_photosPath"
                                placeholder="C:\Photos\..." />
                            <button class="btn btn-outline-secondary" type="button" @onclick="BrowsePhotosPathAsync">Browse</button>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label" for="pollingInterval">Polling interval (ms)</label>
                            <input class="form-control" id="pollingInterval" type="number" min="0" step="1"
                                @bind="_pollingIntervalMs" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label" for="lookbackSeconds">Lookback seconds on start</label>
                            <input class="form-control" id="lookbackSeconds" type="number" min="0" step="1"
                                @bind="_lookbackSecondsOnStart" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label" for="maxRowsPerPoll">Max rows per poll</label>
                            <input class="form-control" id="maxRowsPerPoll" type="number" min="1" step="1"
                                @bind="_maxRowsPerPoll" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-primary" type="button" @onclick="SaveSettingsAsync">Save</button>
                    <button class="btn btn-secondary" type="button" @onclick="CloseSettings">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show" @onclick="CloseSettings"></div>
}

@code {
    [Inject]
    private IDbContextFactory<AccessControlDbContext> DbFactory { get; set; } = default!;

    [Inject]
    private IConfiguration Configuration { get; set; } = default!;

    [Inject]
    private IJSRuntime JsRuntime { get; set; } = default!;

    [Inject]
    private IWebHostEnvironment Environment { get; set; } = default!;
    private bool _showSettingsModal;
    private string _connectionString = string.Empty;
    private bool _isLiveMode = true;
    private string _selectedDeviceSerial = string.Empty;
    private string _photosPath = string.Empty;
    private int _pollingIntervalMs = 500;
    private int _lookbackSecondsOnStart = 3;
    private int _maxRowsPerPoll = 20;
    private List<ZkDevice> _devices = new();

    private async Task OpenSettingsAsync()
    {
        await LoadSettingsFromAppSettingsAsync();
        _showSettingsModal = true;
    }

    private void CloseSettings() => _showSettingsModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadSettingsFromAppSettingsAsync();

        await using var db = await DbFactory.CreateDbContextAsync();

        _devices = await db.ZkDevices
        .AsNoTracking()
        .OrderBy(d => d.Name)
        .ToListAsync();

        if (_devices.Count > 0 && (string.IsNullOrWhiteSpace(_selectedDeviceSerial) || _devices.All(d => d.SerialNumber != _selectedDeviceSerial)))
            _selectedDeviceSerial = _devices[0].SerialNumber;
    }

    private async Task BrowsePhotosPathAsync()
    {
        try
        {
            var selectedPath = await JsRuntime.InvokeAsync<string>("sentryApp.selectFolder");
            if (!string.IsNullOrWhiteSpace(selectedPath))
                _photosPath = selectedPath;
        }
        catch (JSException)
        {
            Console.Error.WriteLine("Folder selection is not supported in this browser.");
        }
    }

    private async Task SaveSettingsAsync()
    {
        try
        {
            await SaveSettingsToAppSettingsAsync();

            _showSettingsModal = false;
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Failed to save settings: {ex}");
        }
    }

    private async Task LoadSettingsFromAppSettingsAsync()
    {
        var appSettingsPath = Path.Combine(Environment.ContentRootPath, "appsettings.json");
        JsonObject? root = null;

        if (File.Exists(appSettingsPath))
        {
            try
            {
                var json = await File.ReadAllTextAsync(appSettingsPath);
                root = JsonNode.Parse(json) as JsonObject;
            }
            catch (Exception ex)
            {
                Console.Error.WriteLine($"Failed to read appsettings.json: {ex}");
            }
        }

        var connectionStrings = root?["ConnectionStrings"] as JsonObject;
        _connectionString = ReadStringSetting(connectionStrings, "AccessControlDb")
            ?? Configuration.GetConnectionString("AccessControlDb")
            ?? _connectionString;

        var photoOptions = root?["PhotoOptions"] as JsonObject;
        _photosPath = ReadStringSetting(photoOptions, "PhotoDirectory")
            ?? Configuration.GetSection("PhotoOptions").GetValue<string>("PhotoDirectory")
            ?? _photosPath;

        _isLiveMode = ReadBoolSetting(root, "IsLiveMode") ?? Configuration.GetValue("IsLiveMode", _isLiveMode);

        var storedDeviceSerial = ReadStringSetting(root, "SelectedDeviceSerial");
        if (!string.IsNullOrWhiteSpace(storedDeviceSerial))
            _selectedDeviceSerial = storedDeviceSerial;

        var turnstilePolling = root?["TurnstilePolling"] as JsonObject;
        _pollingIntervalMs = ReadIntSetting(turnstilePolling, "IntervalsMs")
            ?? ReadIntSetting(turnstilePolling, "IntervalMs")
            ?? Configuration.GetValue("TurnstilePolling:IntervalsMs", Configuration.GetValue("TurnstilePolling:IntervalMs", _pollingIntervalMs));

        _lookbackSecondsOnStart = ReadIntSetting(turnstilePolling, "LookbackSecondsOntart")
            ?? ReadIntSetting(turnstilePolling, "LookbackSecondsOnStart")
            ?? Configuration.GetValue("TurnstilePolling:LookbackSecondsOntart", Configuration.GetValue("TurnstilePolling:LookbackSecondsOnStart", _lookbackSecondsOnStart));

        _maxRowsPerPoll = ReadIntSetting(turnstilePolling, "MaxRowsPerPoll")
            ?? Configuration.GetValue("TurnstilePolling:MaxRowsPerPoll", _maxRowsPerPoll);

        if (_devices.Count > 0 && (string.IsNullOrWhiteSpace(_selectedDeviceSerial) || _devices.All(d => d.SerialNumber != _selectedDeviceSerial)))
            _selectedDeviceSerial = _devices[0].SerialNumber;
    }

    private async Task SaveSettingsToAppSettingsAsync()
    {
        var appSettingsPath = Path.Combine(Environment.ContentRootPath, "appsettings.json");
        JsonObject root;

        try
        {
            if (File.Exists(appSettingsPath))
            {
                var json = await File.ReadAllTextAsync(appSettingsPath);
                root = JsonNode.Parse(json) as JsonObject ?? new JsonObject();
            }
            else
            {
                root = new JsonObject();
            }

            if (root["ConnectionStrings"] is not JsonObject connectionStrings)
            {
                connectionStrings = new JsonObject();
                root["ConnectionStrings"] = connectionStrings;
            }

            if (root["PhotoOptions"] is not JsonObject photoOptions)
            {
                photoOptions = new JsonObject();
                root["PhotoOptions"] = photoOptions;
            }

            if (root["TurnstilePolling"] is not JsonObject turnstilePolling)
            {
                turnstilePolling = new JsonObject();
                root["TurnstilePolling"] = turnstilePolling;
            }

            connectionStrings["AccessControlDb"] = _connectionString;
            photoOptions["PhotoDirectory"] = _photosPath;
            root["IsLiveMode"] = _isLiveMode;
            root["SelectedDeviceSerial"] = _selectedDeviceSerial;

            turnstilePolling["IntervalsMs"] = _pollingIntervalMs;
            turnstilePolling["IntervalMs"] = _pollingIntervalMs; // backward compatibility
            turnstilePolling["LookbackSecondsOntart"] = _lookbackSecondsOnStart;
            turnstilePolling["LookbackSecondsOnStart"] = _lookbackSecondsOnStart; // backward compatibility
            turnstilePolling["MaxRowsPerPoll"] = _maxRowsPerPoll;

            await File.WriteAllTextAsync(appSettingsPath, root.ToJsonString(new JsonSerializerOptions
            {
                WriteIndented = true
            }));
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Failed to save settings to appsettings.json: {ex}");
        }
    }

    private static string? ReadStringSetting(JsonObject? root, string key)
    {
        if (root is null)
            return null;

        return root.TryGetPropertyValue(key, out var value)
            ? value?.GetValue<string>()
            : null;
    }

    private static bool? ReadBoolSetting(JsonObject? root, string key)
    {
        if (root is null)
            return null;

        return root.TryGetPropertyValue(key, out var value)
            ? value?.GetValue<bool?>()
            : null;
    }

    private static int? ReadIntSetting(JsonObject? root, string key)
    {
        if (root is null)
            return null;

        return root.TryGetPropertyValue(key, out var value)
            ? value?.GetValue<int?>()
            : null;
    }
}
